{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block content %}
        <div class="row">
          <div class="col-md-4">
            <div class="card">
              <div class="card-header">
                <h4 class="card-title">Ajouter un utilisateur</h4>
                <p><a href="/admin/users">Retour</a></p>
              </div>
              <div class="card-body">
                <div  id="icons-wrapper">
                    {{ form_start(registrationForm) }}
                    <div class="col-md-12">
                        <div class="form-group">
                        <label>Email</label>
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                        <label>Nom d'utilisateur</label>
                        {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="col-md-12">
                        <label>Nom</label>
                        <div class="form-group">
                        {{ form_widget(registrationForm.name, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                        <label>Mot de passe</label>
                        {{ form_widget(registrationForm.plainPassword, {
                            label: 'Password',
                            'attr': {'class': 'form-control'}
                        }) }}
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                        <label>Roles</label>
                        <select name="role_user" class="form-control">
                            <option value="ROLE_USER">Utilisateur</option>
                            <option value="ROLE_ADMIN">Administrateur</option>
                        </select>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <button type="submit" class="btn">Register</button>
                        </div>
                    </div>
                    {{ form_end(registrationForm) }}
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-8">
            <div class="card">
              <div class="card-body">
                <div  id="icons-wrapper">
                    Liste des utilisateurs
                </div>
              </div>
            </div>
          </div>
        </div>
<script>
var activepage = "#slidelink5";
</script>
{% endblock %}
